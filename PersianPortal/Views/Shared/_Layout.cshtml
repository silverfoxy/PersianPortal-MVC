                $("#fadatepicker").focus();
            })
        }

        function ShowSignUpModal() {
            $('#SignUp').modal('show');
            $('input[datepicker="persiandate"]').datepicker({
                changeMonth: true,
                changeYear: true,
            });
            $("#datepickerbtn").click(function (event) {
                event.preventDefault();
                $("#fadatepicker").focus();
            })
        }

        function SwitchSignInSignUpDivs(SignIn) {
            if (SignIn) {
                $('#loginbox').show();
                $('#signupbox').hide();
                $('#login-modal-title-signin').show();
                $('#login-modal-title-signup').hide();
            }
            else {
                $('#loginbox').hide();
                $('#signupbox').show();
                $('#login-modal-title-signin').hide();
                $('#login-modal-title-signup').show();
            }
        }
        function spellCheck() {
            if ($("#searchInput").val() == "سلنام" || $("#searchInput").val() == "اسعار" || $("#searchInput").val() == "احبار")
                $("#searchInput").css("color", "blue");
            if ($("#searchInput").val() == "سسس" || $("#searchInput").val() == "..." || $("#searchInput").val() == "پپ")
